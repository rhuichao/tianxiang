<ul class="nav nav-tabs nav-justified" role="tablist">
  <li class="active"><a href="#">员工列表</a></li>
  <li><a href="<%= employee_index_resign_path %>">离职员工列表</a></li>
</ul>

<table class="table table-striped">
  <tr>
    <th>工号</th>
    <th>姓名</th>
		<th>手机</th>
		<th>座机</th>
		<th>操作</th>
  </tr>
 
<% @employees.each do |employee| %>
  <tr>
    <td><%= employee.id_card %></td>
    <td><%= employee.name %></td>
		<td><%= employee.mobile %></td>
		<td><%= employee.telephone %></td>
    <td><%= link_to '查看', employee %> |
    <%= link_to '编辑', edit_employee_path(employee) %> |
    <%= link_to '离职', employee_resign_path(employee), :confirm => '是否确认离职?' %></td>
  </tr>
<% end %>
</table>
 
